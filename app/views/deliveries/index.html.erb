<div>
  <nav>
        <a href="/">Delivery Tracker</a>
        |
        <a href="/users/edit">Edit profile</a>
        |
        <a href="/users/sign_out">Sign out</a>
    </nav>

<hr>

  <div>
    <h1>
      Delivery Tracker
    </h1>
  </div>
  <p>Know if something gets lost in the mail.</p>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <input type="checkbox" id="arrived_box" name="query_arrived" value="1">

        <label for="arrived_box">Arrived</label>
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <input type="text" id="details_box" name="query_details">
      </div>


      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div class="waiting_on">
  <h2> Waiting on </h2>
  <ul>
    <% @wo_deliveries.each do |a_delivery| %>
      <li>
        <div><%= a_delivery.description %></div>
        
        <div style="color: red">
          Supposed to arrive on
          <%= a_delivery.supposed_to_arrive_on %>
        </div>

        <div>
          <%= a_delivery.details %>
        </div>

        <div>
          <form action="/modify_delivery/<%= a_delivery.id %>" method="post">
            <input type="hidden" name="arrived" value="true">

            <button>Mark as received</button>
          </form>
        </div>

        <br>
        </li>
    <% end %>
  </ul>
</div>

<hr>

<div class="received">
  <h2>Received</h2>

  <ul>
    <% @r_deliveries.each do |a_delivery| %>
      <li>
        <div><%= a_delivery.description %></div>
        <%= time_ago_in_words(a_delivery.updated_at) %> ago
      </li>
    <% end %>
        <td>
          <%= a_delivery.arrived %>
        </td>

        <td>
          <%= a_delivery.description %>
        </td>

        <td>
          <%= a_delivery.details %>
        </td>

        <td>
          <%= a_delivery.supposed_to_arrive_on %>
        </td>

        <td>
          <%= a_delivery.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_delivery.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_delivery.updated_at) %> ago
        </td>

        <td>
          <a href="/deliveries/<%= a_delivery.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
